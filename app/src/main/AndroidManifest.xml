<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.automatedfoodorderingsystem">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/circlelogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/circlelogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".userPart.SelectedDishActivity"></activity>
        <activity
            android:name=".userPart.MenuActivity"
            android:parentActivityName=".userPart.UserDashboardActivity" />
        <activity android:name=".userPart.ScannerActivity" />
        <activity android:name=".userPart.EditProfileActivity" />
        <activity android:name=".userPart.UserOtpAuthentication" />
        <activity android:name=".userPart.UserAuthenticationActivity" />
        <activity android:name=".restaurantPart.RestaurantDashboardActivity" />
        <activity android:name=".userPart.UserDashboardActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".restaurantPart.RestaurantRegistrationActivity" />
        <activity android:name=".restaurantPart.RestaurantLoginActivity" />
        <activity android:name=".userPart.UserRegistrationActivity" />
        <activity android:name=".userPart.UserLoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>