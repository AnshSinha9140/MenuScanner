<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_final"
    android:orientation="vertical"
    tools:context=".UserFragments.FragmentProfile">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="115dp"
        android:elevation="8dp"
        app:cardCornerRadius="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_account_circle_">

        </de.hdodenhof.circleimageview.CircleImageView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user_profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/ic_edit"
        android:drawablePadding="10dp"
        android:drawableTint="@color/textColor"
        android:fontFamily="@font/arvo"
        android:gravity="center"
        android:text="Edit Profile"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <View
        android:id="@+id/single_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="8dp"
        android:background="#FDB1AAAA" />

    <TextView
        android:id="@+id/user_profile_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_payment"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:fontFamily="@font/arvo"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Order History"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_share"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:fontFamily="@font/arvo"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Share App"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_bug_report"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:fontFamily="@font/arvo"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Report a bug"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_rate_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_grade"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:fontFamily="@font/arvo"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Rate the App"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <Button
        android:id="@+id/user_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/arvo"
        android:padding="15dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textFontWeight="800"
        android:textSize="18sp" />


</LinearLayout>